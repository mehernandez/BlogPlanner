<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="70dp"
     android:orientation="vertical"
    tools:context="com.example.mariohernandez.blogplanner.HomeActivity"
    android:background="@drawable/fondo_ficty"
    android:id="@+id/principal">

    <LinearLayout
        android:layout_width="match_parent" android:orientation="vertical"
        android:layout_height="match_parent" android:layout_weight="0.8"
        android:paddingRight="40dp" android:paddingLeft="40dp"
        android:paddingTop="30dp" android:paddingBottom="70dp"
        >

    <Button
        android:layout_width="match_parent" android:layout_weight="1"
        android:layout_height="match_parent" android:layout_marginBottom="20dp"
        android:id="@+id/btn1" android:background="@drawable/btn_temas"
         />

        <Button
            android:layout_width="match_parent" android:layout_weight="1"
            android:layout_height="match_parent" android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp" android:id="@+id/btn2"
            android:background="@drawable/btn_contenido"/>
        <Button
            android:layout_width="match_parent" android:layout_weight="1"
            android:layout_height="match_parent" android:layout_marginTop="20dp"
            android:id="@+id/btn3" android:background="@drawable/btn_herra"
            />


        </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent" android:layout_weight="4.8"
        android:orientation="horizontal"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent" android:orientation="vertical"
            android:layout_height="match_parent" android:layout_weight="1">
            <ImageView
                android:layout_width="match_parent" android:layout_weight="1"
                android:layout_height="match_parent" android:id="@+id/img1"
                android:src="@drawable/btn_idea"/>
            <TextView
                android:layout_width="match_parent" android:layout_weight="2"
                android:layout_height="match_parent" android:text="IDEAS ESPONTÁNEAS"
                android:gravity="center" android:textColor="@color/black"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent" android:orientation="vertical"
            android:layout_height="match_parent" android:layout_weight="1">
            <ImageView
                android:layout_width="match_parent" android:layout_weight="1"
                android:layout_height="match_parent" android:id="@+id/img2"
                android:src="@drawable/btn_cam"/>
            <TextView
                android:layout_width="match_parent" android:layout_weight="2"
                android:layout_height="match_parent" android:text="CÁMARA"
                android:gravity="center" android:textColor="@color/black"/>
        </LinearLayout>


    </LinearLayout>

</LinearLayout>
