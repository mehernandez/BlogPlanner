<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" android:background="@drawable/fondo_registrarse"
    tools:context="com.example.mariohernandez.blogplanner.DifundirActivity"
    android:orientation="vertical" android:id="@+id/principal">

    <TextView android:text="Éstos son los pasos que debes chequear, para difundir la nueva entrada de tu blog en las redes sociales."
        android:layout_width="wrap_content" android:textColor="@color/black"
        android:layout_height="wrap_content" android:layout_marginBottom="20dp"/>


    <RadioButton
        android:layout_width="match_parent"
        android:layout_height="40dp" android:text="REDACTAR POST"
        android:textSize="15dp"/>
    <RadioButton
        android:layout_width="match_parent"
        android:layout_height="40dp" android:text="¿INCLUYE UNA IMAGEN?"
        android:textSize="15dp"/>
    <RadioButton
        android:layout_width="match_parent"
        android:layout_height="40dp" android:text="TEXTO CORTO"
        android:textSize="15dp"/>
    <RadioButton
        android:layout_width="match_parent"
        android:layout_height="40dp" android:text="CONTINUO Y ORGANIZADO"
        android:textSize="15dp"/>

    <RadioButton
        android:layout_width="match_parent"
        android:layout_height="40dp" android:text="ESCOGER REDES"
        android:textSize="15dp"/>
    <RadioButton
        android:layout_width="match_parent"
        android:layout_height="40dp" android:text="ADAPTAR POST PARA CADA RED"
        android:textSize="15dp"/>
    <RadioButton
        android:layout_width="match_parent"
        android:layout_height="40dp" android:text="TÍTULO INTRIGANTE"
        android:textSize="15dp"/>
    <RadioButton
        android:layout_width="match_parent"
        android:layout_height="40dp" android:text="PUBLICAR"
        android:textSize="15dp"/>


    <Button
        android:layout_width="150dp" android:textSize="20dp" android:background="@drawable/rounded_button_sig"
        android:layout_height="50dp" android:layout_gravity="right"
        android:text="REGRESAR" android:textColor="@color/siguiente" android:layout_marginTop="40dp"
        android:id="@+id/btn_sig"/>

</LinearLayout>
