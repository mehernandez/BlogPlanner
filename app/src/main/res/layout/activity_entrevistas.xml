<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="@drawable/fondo_registrarse"
    tools:context="com.example.mariohernandez.blogplanner.EntrevistasActivity"
    android:id="@+id/principal" android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent" android:padding="20dp"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent" android:orientation="vertical"
            android:layout_height="match_parent">

    <TextView android:text="Anota aquí la información de entrevistas que hagas:"
        android:layout_width="wrap_content" android:textColor="@color/black"
        android:layout_height="wrap_content" android:layout_marginBottom="10dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="400dp" android:background="@drawable/textico"
        android:text="NOMBRE: \n \n FECHA: \n \n EVENTO: \n \n TEMA:"
        android:gravity="top" android:padding="10dp"/>
            
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="120dp">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp" />
                <TextView
                    android:layout_width="wrap_content" android:text="Notas de la entrevista"
                    android:layout_height="wrap_content" android:gravity="center_vertical"
                    android:layout_gravity="center_vertical" android:layout_marginLeft="10dp"
                    android:textColor="@color/black"/>

            </LinearLayout>


            <EditText
                android:layout_width="match_parent"  android:padding="10dp"
                android:layout_height="400dp" android:background="@drawable/textico"/>

    <Button
        android:layout_width="150dp" android:textSize="20dp" android:background="@drawable/rounded_button_continue"
        android:layout_height="40dp" android:layout_gravity="right" android:layout_marginTop="20dp"
        android:text="REGRESAR" android:textColor="#DDCCC4" android:layout_weight="0.00006"
        android:id="@+id/btn_sig"/>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
