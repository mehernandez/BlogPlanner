<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="30dp"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.mariohernandez.blogplanner.HerramientasActivity"
    android:id="@+id/principal" android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent" android:orientation="vertical"
        android:layout_height="match_parent" android:layout_weight="0.8"
        android:paddingRight="40dp" android:paddingLeft="40dp"
        android:paddingTop="30dp" android:paddingBottom="70dp"
        >

        <Button
            android:layout_width="match_parent" android:layout_weight="1"
            android:layout_height="match_parent" android:layout_marginBottom="20dp"
            android:id="@+id/btn1" android:background="@drawable/btn_tips"
            />

        <Button
            android:layout_width="match_parent" android:layout_weight="1"
            android:layout_height="match_parent" android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp" android:id="@+id/btn2"
            android:background="@drawable/btn_pasos"/>
        <Button
            android:layout_width="match_parent" android:layout_weight="1"
            android:layout_height="match_parent" android:layout_marginTop="20dp"
            android:id="@+id/btn3" android:background="@drawable/btn_dif"
            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent" android:layout_weight="4"
        android:layout_height="match_parent" android:paddingLeft="200dp">

        <Button
            android:layout_width="150dp" android:textSize="20dp" android:background="@drawable/rounded_button_continue"
            android:layout_height="40dp" android:layout_gravity="right" android:layout_marginTop="20dp"
            android:text="REGRESAR" android:textColor="#DDCCC4" android:layout_weight="0.00006"
            android:id="@+id/btn_sig"/>
    </LinearLayout>
</LinearLayout>
