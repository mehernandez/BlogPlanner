<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" android:orientation="vertical"
    tools:context="com.example.mariohernandez.blogplanner.RegistrarseActivity"
    android:gravity="center"
    android:background="@drawable/fondo_registrarse"
    android:id="@+id/principal">

        <TextView android:text="NOMBRE Y APELLIDO:" android:layout_width="match_parent"
            android:layout_height="match_parent" android:textColor="#000000"
            android:layout_gravity="left" android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp" android:layout_weight="1"
            />

        <EditText
            android:layout_width="match_parent" android:background="@drawable/rounded_edit_1"
            android:layout_height="match_parent" android:layout_weight="1"
            android:gravity="center" />

    <TextView android:text="NOMBRE DE TU BLOG:" android:layout_width="match_parent"
    android:layout_height="match_parent" android:textColor="#000000"
    android:layout_gravity="left" android:layout_marginLeft="10dp"
    android:layout_marginTop="10dp" android:layout_weight="1" />

    <EditText
        android:layout_width="match_parent" android:background="@drawable/rounded_edit_2"
        android:layout_height="match_parent" android:layout_weight="1"
        android:gravity="center" android:id="@+id/nom_blog"/>

    <TextView android:text="CORREO:" android:layout_width="match_parent"
    android:layout_height="match_parent" android:textColor="#000000"
    android:layout_gravity="left" android:layout_marginLeft="10dp"
    android:layout_marginTop="10dp" android:layout_weight="1"/>

    <EditText
        android:layout_width="match_parent" android:background="@drawable/rounded_edit_3"
        android:layout_height="match_parent" android:layout_weight="1"
        android:gravity="center" />

    <TextView android:text="CELULAR:" android:layout_width="match_parent"
    android:layout_height="match_parent" android:textColor="#000000"
    android:layout_gravity="left" android:layout_marginLeft="10dp"
    android:layout_marginTop="10dp" android:layout_weight="1"/>

    <EditText
        android:layout_width="match_parent" android:background="@drawable/rounded_edit_4"
        android:layout_height="match_parent" android:layout_weight="1"
        android:gravity="center" />

    <TextView android:text="CONTRASEÑA:" android:layout_width="match_parent"
        android:layout_height="match_parent" android:textColor="#000000"
        android:layout_gravity="left" android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp" android:layout_weight="1"/>

    <EditText
        android:layout_width="match_parent" android:background="@drawable/rounded_edit_5"
        android:layout_height="match_parent" android:layout_weight="1"
        android:gravity="center" />

    <TextView android:text="CONFIRMAR CONTRASEÑA:" android:layout_width="match_parent"
    android:layout_height="match_parent" android:textColor="#000000"
    android:layout_gravity="left" android:layout_marginLeft="10dp"
    android:layout_marginTop="10dp" android:layout_weight="1"/>

    <EditText
        android:layout_width="match_parent" android:background="@drawable/rounded_edit_6"
        android:layout_height="match_parent" android:layout_weight="1"
        android:gravity="center" />


    <CheckBox
        android:layout_width="wrap_content" android:layout_gravity="left" android:textColor="#A9A9A9"
        android:layout_height="20dp" android:text="ACEPTO TÉRMINOS Y CONDICIONES"
        android:layout_marginTop="5dp"/>

    <Button
        android:layout_width="150dp" android:textSize="20dp" android:background="@drawable/rounded_button_continue"
        android:layout_height="40dp" android:layout_gravity="right"
        android:text="SIGUIENTE" android:textColor="#DDCCC4"
        android:id="@+id/btn_sig"/>

</LinearLayout>
