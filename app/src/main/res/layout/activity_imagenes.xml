<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mariohernandez.blogplanner.ImagenesActivity"
    android:id="@+id/principal" android:background="@drawable/fondo_registrarse">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent" android:orientation="vertical"
            android:layout_height="match_parent" android:padding="20dp">

        <TextView android:text="A침adir im치genes para tu pr칩xima entrada desde:" android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_gravity="center"
            android:textColor="@color/black" android:textSize="15dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp" android:gravity="center">
            <ImageView
                android:layout_width="70dp" android:src="@drawable/btn_icam"
                android:layout_height="70dp" android:id="@+id/img1" />
            <ImageView
                android:layout_width="70dp" android:layout_marginRight="5dp" android:layout_marginLeft="5dp"
                android:layout_height="70dp" android:id="@+id/img2" android:src="@drawable/btn_paisa" />
            <ImageView
                android:layout_width="70dp" android:layout_marginLeft="5dp" android:layout_marginRight="5dp"
                android:layout_height="70dp" android:src="@drawable/instagram"/>
            <ImageView
                android:layout_width="70dp" android:src="@drawable/pinterest"
                android:layout_height="70dp" />
        </LinearLayout>

            <LinearLayout android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="150dp" android:gravity="center">
                <ImageView
                    android:layout_width="match_parent" android:layout_weight="1"
                    android:layout_height="match_parent" android:id="@+id/cuadro1"
                    android:layout_marginRight="5dp" android:background="@drawable/rounded_text2"/>
                <ImageView
                    android:layout_width="match_parent" android:layout_marginRight="5dp" android:layout_marginLeft="5dp"
                    android:layout_height="match_parent" android:id="@+id/cuadro2"
                    android:layout_weight="1" android:background="@drawable/rounded_text2"/>

            </LinearLayout>

            <LinearLayout android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="150dp" android:gravity="center">
                <ImageView
                    android:layout_width="match_parent" android:layout_weight="1"
                    android:layout_height="match_parent" android:id="@+id/cuadro3"
                    android:layout_marginRight="5dp" android:background="@drawable/rounded_text2"/>
                <ImageView
                    android:layout_width="match_parent" android:layout_marginRight="5dp" android:layout_marginLeft="5dp"
                    android:layout_height="match_parent" android:id="@+id/cuadro4"
                    android:layout_weight="1" android:background="@drawable/rounded_text2"/>

            </LinearLayout>

            <LinearLayout android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="150dp" android:gravity="center">
                <ImageView
                    android:layout_width="match_parent" android:layout_weight="1"
                    android:layout_height="match_parent" android:id="@+id/cuadro5"
                    android:layout_marginRight="5dp" android:background="@drawable/rounded_text2"/>
                <ImageView
                    android:layout_width="match_parent" android:layout_marginRight="5dp" android:layout_marginLeft="5dp"
                    android:layout_height="match_parent" android:id="@+id/cuadro6"
                    android:layout_weight="1" android:background="@drawable/rounded_text2"/>

            </LinearLayout>

            <TextView android:text="Al escoger tus im치genes recuerda que el objetivo de tu blog es:" android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:layout_gravity="center"
                android:textColor="@color/black" android:textSize="15dp" android:layout_marginTop="20dp"/>

            <EditText
                android:layout_width="match_parent" android:layout_marginTop="20dp"
                android:layout_height="300dp" android:background="@drawable/textico"
                android:id="@+id/objetivo" android:editable="false" android:padding="20dp"
                android:gravity="top" />


            <Button
                android:layout_width="150dp" android:textSize="20dp" android:background="@drawable/rounded_button_continue"
                android:layout_height="40dp" android:layout_gravity="right" android:layout_marginTop="20dp"
                android:text="REGRESAR" android:textColor="#DDCCC4"
                android:id="@+id/btn_sig"/>




        </LinearLayout>

    </ScrollView>


</LinearLayout>
