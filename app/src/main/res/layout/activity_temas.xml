<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.mariohernandez.blogplanner.TemasActivity"
    android:orientation="vertical" android:id="@+id/principal">

    <TextView android:text="Organiza los temas que se te ocurren para tus entradas de acuerdo al orden en el que quieras usarlos"
        android:layout_width="wrap_content" android:layout_marginBottom="10dp"
        android:layout_height="wrap_content" android:textColor="@color/black" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="300dp" android:background="@drawable/textico"/>

    <Button
        android:layout_width="150dp" android:textSize="20dp" android:background="@drawable/rounded_button_continue"
        android:layout_height="40dp" android:layout_gravity="right" android:layout_marginTop="20dp"
        android:text="REGRESAR" android:textColor="#DDCCC4"
        android:id="@+id/btn_sig"/>

</LinearLayout>
