<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" android:background="@drawable/fondo_registrarse"
    tools:context="com.example.mariohernandez.blogplanner.InvestigacionActivity"
    android:orientation="vertical" android:id="@+id/principal">

    <TextView android:text="Anota aquí la información que investigues para tu próxima entrada teniendo en cuenta el objetivo de tu blog:"
        android:layout_width="wrap_content" android:textColor="@color/black"
        android:layout_height="wrap_content" android:layout_marginBottom="10dp"/>

    <EditText
        android:layout_width="match_parent" android:padding="10dp" android:gravity="top"
        android:layout_height="300dp" android:background="@drawable/textico"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <ImageView
            android:layout_width="60dp" android:src="@drawable/chrome"
            android:layout_height="60dp" android:scaleType="centerInside"/>
        <TextView
            android:layout_width="wrap_content" android:text="Buscar información desde el navegador"
            android:layout_height="wrap_content" android:gravity="center_vertical"
            android:layout_gravity="center" android:layout_marginLeft="10dp"
            android:textColor="@color/black"
            />

    </LinearLayout>
    <Button
        android:layout_width="150dp" android:textSize="20dp" android:background="@drawable/rounded_button_continue"
        android:layout_height="40dp" android:layout_gravity="right" android:layout_marginTop="20dp"
        android:text="REGRESAR" android:textColor="#DDCCC4"
        android:id="@+id/btn_sig"/>

</LinearLayout>
